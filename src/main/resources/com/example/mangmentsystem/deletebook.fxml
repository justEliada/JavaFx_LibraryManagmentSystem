<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mangmentsystem.controller.DeleteBookController">
    <children>
        <GridPane layoutX="28.0" layoutY="44.0" prefHeight="153.0" prefWidth="344.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="400.0" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="43.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="43.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="57.0" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Book Title:" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: blue;"/>
                <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Book Author:" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: blue;" />
                <TextField fx:id="publishingCompanyField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Button fx:id="deleteButton" GridPane.columnIndex="1" GridPane.rowIndex="2" mnemonicParsing="false" onAction="#handleDeleteBook" text="Delete Book"  style="-fx-background-color: #89cff0" />
                <Button fx:id="goBackButton" GridPane.columnIndex="1" GridPane.rowIndex="3" mnemonicParsing="false" onAction="#handleGoBack" text="Go Back"  style="-fx-background-color: #89cff0" />
                <Label fx:id="statusLabel" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </GridPane>
    </children>
</AnchorPane>
