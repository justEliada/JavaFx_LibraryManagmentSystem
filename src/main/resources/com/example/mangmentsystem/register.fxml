<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="483.0" prefWidth="614.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mangmentsystem.controller.RegisterController" style="-fx-background-color: #95dee7;">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText" text="Welcome to The Library" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #063970"/>
    <BorderPane prefHeight="413.0" prefWidth="574.0">
        <center>
            <VBox alignment="CENTER" spacing="10">
                <Label text="Username" style="-fx-text-fill: #063970"/>
                <TextField fx:id="usernameTextField" promptText="Enter Username"/>
                <Label text="Password" style="-fx-text-fill: #063970"/>
                <PasswordField fx:id="passwordField" promptText="Enter Password"/>
                <Label text="First Name" style="-fx-text-fill: #063970"/>
                <TextField fx:id="firstNameTextField" promptText="Enter First Name"/>
                <Label text="Last Name" style="-fx-text-fill: #063970"/>
                <TextField fx:id="lastNameTextField" promptText="Enter Last Name"/>
                <Button fx:id="registerButton" onAction="#registerButtonOnAction" text="Register" style="-fx-background-color: #2596be; -fx-text-fill: white"/>
                <Button text="Go Back to Login" onAction="#goBackToLoginAction" style="-fx-background-color: #063970; -fx-text-fill: white"/>
                <Label fx:id="registrationStatusLabel" text="" />
            </VBox>
        </center>
    </BorderPane>
</VBox>
